{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "CONTName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "CONT",
      "metadata": {
        "description": "DCS hostname"
      }
    },
    "CONTVmSize": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "metadata": {
        "description": "VM Size Controller"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "outVN",
      "metadata": {
        "description": "Virtual network name"
      }
    },
    "StorageACCName": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Unique name"
      }
    },
    "FEImagePublisher": {
      "type": "string",
      "metadata": {
        "description": "FE image publisher"
      }
    },
    "FEImageOffer": {
      "type": "string",
      "metadata": {
        "description": "FE image offer"
      }
    },
    "FEWindowsOSVersion": {
      "type": "string",
      "metadata": {
        "description": "FE Windows OS version"
      }
    },
    "FEStorageAccountContainerName": {
      "type": "string",
      "metadata": {
        "description": "FE Storage Container Name"
      }
    },
    "FESubnetRef": {
      "type": "string",
      "metadata": {
        "description": "Subnet Reference"
      }
    },

    "FERulesConfigurationFunction": {
      "type": "string"

    }


  },
  "variables": {
    "location": "[resourceGroup().location]",
    "apiver": "2015-06-15"
  },
  "resources": [
    {
      "name": "[concat(parameters('CONTName'), 'NIC')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[variables('location')]",
      "apiVersion": "[variables('apiver')]",
      "tags": {
        "displayName": "[concat(parameters('CONTName'), 'NIC')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('FESubnetRef')]"
              }
            }
          }
        ]
      }
    },

    {
      "apiVersion": "[variables('apiver')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('CONTName'), 'NIC')]"
      ],
      "location": "[variables('location')]",
      "name": "[parameters('CONTName')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('CONTVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('CONTName')]",
          "adminUsername": "[parameters('AdminUsername')]",
          "adminPassword": "[parameters('AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('FEImagePublisher')]",
            "offer": "[parameters('FEImageOffer')]",
            "sku": "[parameters('FEWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "CONTOSDisk",
            "vhd": {
              "uri": "[concat('http://', parameters('StorageACCName'), '.blob.core.windows.net/', parameters('FEStorageAccountContainerName'), '/', parameters('CONTName'),'OSDisk', '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('CONTName'), 'NIC'))]"
            }
          ]
        }
      },
      "tags": {
        "displayName": "CONT"
      },
      "type": "Microsoft.Compute/virtualMachines",
      "resources": [
        {
          "name": "firewallRules",
          "type": "extensions",
          "location": "[variables('location')]",
          "apiVersion": "[variables('apiver')]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('CONTName')))]"
          ],
          "tags": {
            "displayName": "firewallRules"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "modulesUrl": "https://raw.githubusercontent.com/jrfbal/plgndh/master/scripts/FEDSC.zip",
              "configurationFunction": "[parameters('FERulesConfigurationFunction')]",
              "properties": {
                "nodeName": "[parameters('CONTName')]"
              }
            },
            "protectedSettings": { }
          }
        }
      ]
    }


  ],
    "outputs": {
    }
}
