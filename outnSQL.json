{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "SQLWindowsOSVersion": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Enterprise",
        "Standard",
        "Web"
      ]
    },
    "SQLName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL",
      "metadata": {
        "description": "SQL server hostname"
      }
    },
    "SQLImageOffer": {
      "type": "string",
      "defaultValue": "SQL2014-WS2012R2",
      "allowedValues": [
        "SQL2014-WS2012R2"
      ]
    },
    "SubnetRef": {
      "type": "string",
      "metadata": {
        "description": "Subnet Reference"
      }
    },
    "StorageACCName": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Unique name"
      }
    },
    "SQLVmSize": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_D1"
      ],
      "metadata": {
        "description": "VM Size SQL"
      }
    },
    "StorageAccountContainerName": {
      "type": "string",
      "metadata": {
        "description": "Storage Container Name"
      }
    }
  },

  "variables": {
    "SQLImagePublisher": "MicrosoftSQLServer"
  },
  "resources": [
  ],
  "outputs": {
  }
}
